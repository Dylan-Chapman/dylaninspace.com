{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": "blog/",
      "filePrefix": null,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Cover",
          "name": "image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Intro",
          "name": "intro",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "dateFormat": "yyyy-MM-dd"
        },
        {
          "title": "Tag",
          "name": "tag",
          "type": "string"
        }
      ]
    },
    {
      "name": "astrophotography",
      "pageBundle": false,
      "previewPath": "astrophotography/",
      "filePrefix": null,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Cover",
          "name": "image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Intro",
          "name": "intro",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "dateFormat": "yyyy-MM-dd"
        },
        {
          "title": "Tag",
          "name": "tag",
          "type": "string"
        }
      ]
    },
    {
      "name": "page",
      "pageBundle": false,
      "previewPath": null,
      "filePrefix": null,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Cover",
          "name": "image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Intro",
          "name": "intro",
          "type": "string"
        }
      ]
    },
    {
      "name": "series-entry",
      "pageBundle": false,
      "previewPath": "blog/series/",
      "filePrefix": null,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Cover",
          "name": "image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Intro",
          "name": "intro",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "dateFormat": "yyyy-MM-dd"
        },
        {
          "title": "Series key",
          "name": "seriesKey",
          "type": "string",
          "description": "Folder name under blog/series/ (e.g. 'my-series')"
        }
      ]
    },
    {
      "name": "series-meta",
      "pageBundle": false,
      "previewPath": "blog/series/",
      "filePrefix": null,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Series title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Cover",
          "name": "cover",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Order (pin on /blog/series)",
          "name": "order",
          "type": "number",
          "description": "Optional. Lower shows first.",
          "default": null
        },
        {
          "title": "Parts (canonical order)",
          "name": "parts",
          "type": "contentRelationship",
          "contentTypeName": "series-entry",
          "contentTypeValue": "path",
          "multiple": true,
          "description": "Select entries from blog/series/<seriesKey> in the intended reading order."
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": [
        "default"
      ]
    },
    {
      "title": "page",
      "path": "[[workspace]]/src/content/page",
      "contentTypes": [
        "page"
      ]
    }
  ]
}