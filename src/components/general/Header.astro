---
import HamburgerButton from "./HamburgerButton.astro";
import Navigation from "./Navigation.astro";
---

<div
  class="navigation flex-1 hidden absolute top-0 left-0 w-full bg-cosmos-dark transition-colors duration-300 p-7 pt-[112px] z-10 shadow-2xl"
  id="navigation_wrapper"
>
  <Navigation />
</div>
<header
  class="container mx-auto max-w-screen-xl px-7 py-10 bg-cosmos-dark flex flex-initial flex-row gap-10 items-center justify-between transition-colors duration-300 relative z-20"
>
  <div class="logo flex-none">
    <a
      href="/"
      class="font-bold font-cosmos-space text-lg text-white transition-colors duration-300 hover:text-cosmos-accent"
      >DylanInSpace</a
    >
  </div>
  <div class="navigation flex-1 hidden md:block">
    <Navigation />
  </div>

  <div class="relative flex flex-initial flex-row items-center gap-5">
    <HamburgerButton />
  </div>
</header>
