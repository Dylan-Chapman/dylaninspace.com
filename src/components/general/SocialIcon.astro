---
import { Icon } from "astro-icon";

const { socialUrl = false, socialType } = Astro.props;
---

{
  socialUrl && (
    <li>
      <a href={socialUrl} target="_blank" aria-label={socialType + "link"}>
        <Icon
          name={socialType}
          class="w-auto h-[15px] transition-all duration-300 fill-cosmos-primary/60 hover:fill-cosmos-secondary dark:fill-cosmos-accent dark:hover:fill-cosmos-secondary"
        />
      </a>
    </li>
  )
}
