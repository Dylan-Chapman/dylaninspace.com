---
import "./inline-note.css";
interface Props {
  title?: string;
}

const { title = "Notes & Resources" } = Astro.props as Props;
const hasChildren = Astro.slots.has("default");
---

{
  hasChildren && (
    <section
      class="inline-note-rollup not-prose"
      aria-label={title}
      data-inline-note-rollup
    >
      <h2 class="inline-note-rollup__title">{title}</h2>
      <div class="inline-note-rollup__items">
        <slot />
      </div>
    </section>
  )
}

